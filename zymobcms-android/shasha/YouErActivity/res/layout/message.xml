<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back" >
    
    <RelativeLayout
        android:id="@+id/biaoti" 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/biaotibeijing">
     <Button
        android:id="@+id/gengduo"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="更多"
        android:background="@drawable/selector_gengduo" 
        android:textColor="#FFFFFF"/>
     
      <TextView 
            android:id="@+id/fuwuwenzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gengduo"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="关于"
            android:textSize="25sp"
            android:textColor="#ffffff"/>
              
   </RelativeLayout>
   
       <ListView
              android:id="@+id/messagelist"
           android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:cacheColorHint="#00000000"
              android:layout_marginTop="20dp"
		     android:divider="#55000000"
		     android:dividerHeight="1dp"
		     android:fadeScrollbars="true"
		     android:layout_below="@id/biaoti"
		     android:background="@drawable/message"
		     android:layout_marginLeft="20dp"
		     android:layout_marginRight="20dp"/>

     
   
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dixiaanniu"
        android:orientation="horizontal"
        android:layout_below="@id/messagelist"
        android:layout_marginTop="20dp">
      
         <Button
           android:id="@+id/bt1"
           android:layout_width="60dp"
           android:layout_height="50dp"
           android:background="@drawable/selector_fuwu1"
           android:onClick="danjigengduo"
           android:layout_marginTop="5dp"
           android:layout_weight="1"/>
      
       <Button 
            android:id="@+id/bt2"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu2"
            android:onClick="danjigengduo"
            android:layout_marginTop="3dp"
             android:layout_weight="1"/>
       <Button 
            android:id="@+id/bt3"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu3"
            android:onClick="danjigengduo"
            android:layout_marginTop="5dp"
             android:layout_weight="1"/>
       <Button
            android:id="@+id/bt4" 
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu4"
            android:onClick="danjigengduo"
            android:layout_marginTop="5dp"
             android:layout_weight="1"/>
       <Button 
            android:id="@+id/bt5"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu5"
            android:onClick="danjigengduo"
            android:layout_marginTop="2dp"
             android:layout_weight="1"/>
      
    </LinearLayout>
</LinearLayout>