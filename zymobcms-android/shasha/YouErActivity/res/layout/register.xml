<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back" >
    
    <RelativeLayout 
        android:id="@+id/kaitou"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/biaotibeijing">
     <Button
        android:id="@+id/gengduo"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="更多" 
        android:background="@drawable/selector_gengduo"
        android:textColor="#FFFFFF"/>
     
     <TextView 
            android:id="@+id/fuwuwenzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gengduo"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:text="注册页面"
            android:textSize="25sp"
            android:textColor="#ffffff"/>
   </RelativeLayout>
   
   <LinearLayout
       android:id="@+id/zhongjian" 
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
       android:layout_below="@id/kaitou">
     <RelativeLayout
       android:id="@+id/zhongjian" 
       android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_below="@id/kaitou">
       
   <TextView 
        android:id="@+id/yong"
        android:layout_width="90dp"
        android:layout_height="30dp"
         android:layout_marginTop="30dp"
         android:layout_marginLeft="20dp"
         android:text="      用 户名  :"
         android:textColor="#CD0000"
         android:textSize="15sp"
         android:textStyle="bold"/>
    <EditText
        android:id="@+id/yonghuming"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/anniu"
       android:layout_toRightOf="@id/yong"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
     <TextView 
        android:id="@+id/shu"
        android:layout_width="90dp"
        android:layout_height="30dp"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_below="@id/yong"
        android:textSize="15sp"
         android:text="  输 入密码  :"
          android:textColor="#CD0000"
         android:textStyle="bold"/>
    <EditText
        android:id="@+id/shezhimima"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/anniu"
        android:layout_below="@id/yonghuming"
        android:layout_toRightOf="@id/shu"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"/>
     
     <TextView 
        android:id="@+id/que"
        android:layout_width="90dp"
        android:layout_height="30dp"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
         android:text="   确认密码  :"
         android:textSize="15sp"
          android:textColor="#CD0000"
         android:textStyle="bold"
         android:layout_below="@id/shu"/>
     
    <EditText
        android:id="@+id/querenmima"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/anniu"
        android:layout_below="@id/shezhimima"
        android:layout_toRightOf="@id/que"
        android:layout_marginLeft="10dp"
         android:layout_marginTop="5dp"
         android:inputType="textPassword"/>
     <TextView 
        android:id="@+id/you"
        android:layout_width="90dp"
        android:layout_height="30dp"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_below="@id/que"
         android:text="          邮 箱  :"
        android:textSize="15sp"
          android:textColor="#CD0000"
         android:textStyle="bold"/>
     
    <EditText
        android:id="@+id/youxiang"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/anniu"
        android:layout_below="@id/querenmima"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/you"
         android:layout_marginTop="5dp" />
     <TextView 
        android:id="@+id/zhen"
        android:layout_width="90dp"
        android:layout_height="30dp"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_below="@id/you"
         android:text="   真实姓名  :"
         android:textSize="15sp"
          android:textColor="#CD0000"
         android:textStyle="bold"/>
     
    <EditText
        android:id="@+id/xingming"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/anniu"
        android:layout_below="@id/youxiang"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/zhen"
         android:layout_marginTop="5dp" />
     <TextView 
        android:id="@+id/shen"
        android:layout_width="90dp"
        android:layout_height="30dp"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_below="@id/zhen"
         android:text="身份证号码  :"
         android:textSize="15sp"
          android:textColor="#CD0000"
         android:textStyle="bold"/>
     
    <EditText
        android:id="@+id/shenfenzheng"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/anniu"
        android:layout_below="@id/xingming"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/shen"
         android:layout_marginTop="5dp" />
     
    <Button
        android:id="@+id/zhuce"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/anniu"
        android:layout_centerInParent="true"
         android:layout_marginTop="5dp"
        android:text="注册" 
        android:layout_below="@id/shenfenzheng"
        android:textColor="#0A0A0A"/>
 
             </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dixiaanniu"
        android:orientation="horizontal"
        android:layout_below="@id/zhongjian">
      
          <Button
           android:id="@+id/bt1"
           android:layout_width="60dp"
           android:layout_height="50dp"
           android:background="@drawable/selector_fuwu1"
           android:onClick="danjigengduo"
           android:layout_marginTop="5dp"
           android:layout_weight="1"/>
      
       <Button 
            android:id="@+id/bt2"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu2"
            android:onClick="danjigengduo"
            android:layout_marginTop="3dp"
            android:layout_weight="1"/>
       <Button 
            android:id="@+id/bt3"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu3"
            android:onClick="danjigengduo"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>
       <Button
            android:id="@+id/bt4" 
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu4"
            android:onClick="danjigengduo"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>
       <Button 
            android:id="@+id/bt5"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu5"
            android:onClick="danjigengduo"
            android:layout_marginTop="2dp"
            android:layout_weight="1"/>
      
    </LinearLayout>
</LinearLayout>