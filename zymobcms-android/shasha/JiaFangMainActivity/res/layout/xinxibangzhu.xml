<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/anniubeijing">
     <Button
        android:id="@+id/gengduo"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="更多"
        android:background="@drawable/selector_gengduo" 
        android:textColor="#FFFFFF"/>
   </RelativeLayout>
   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:layout_weight="1">
    <TextView
        android:id="@+id/kehuduan"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:background="@drawable/anniu"
        android:layout_marginTop="130dp"
          android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="客户端名称： 家纺团购"  />
    <TextView
        android:id="@+id/nianxian"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:background="@drawable/anniu"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="客户端年限： 3年" />
     
    <TextView
        android:id="@+id/banben"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:background="@drawable/anniu"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="客户端版本: JF1.0" />
     
    <TextView
        android:id="@+id/kaifazhe"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:background="@drawable/anniu"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="开发者：北京钰泽侬信息技术有限公司" />
     
   </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dixiaanniu"
        android:orientation="horizontal"
        android:layout_below="@id/kaifazhe">
      
         <Button
           android:id="@+id/bt1"
           android:layout_width="60dp"
           android:layout_height="50dp"
           android:background="@drawable/selector_fuwu1"
           android:onClick="danjigengduo"
           android:layout_marginTop="5dp"
                   android:layout_weight="1"/>
      
       <Button 
            android:id="@+id/bt2"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu2"
            android:onClick="danjigengduo"
            android:layout_marginTop="3dp"
                    android:layout_weight="1"/>
       <Button 
            android:id="@+id/bt3"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu3"
            android:onClick="danjigengduo"
            android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
       <Button
            android:id="@+id/bt4" 
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu4"
            android:onClick="danjigengduo"
            android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
       <Button 
            android:id="@+id/bt5"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/selector_fuwu5"
            android:onClick="danjigengduo"
            android:layout_marginTop="2dp"
                    android:layout_weight="1"/>
      
    </LinearLayout>
</LinearLayout>